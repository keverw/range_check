{
  "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "indentStyle": "space",
    "lineWidth": 120,
    "ignore": ["dist"]
  },
  "javascript": {
    "formatter": {
      "semicolons": "always",
      "trailingComma": "all",
      "quoteStyle": "single"
    }
  }
}
